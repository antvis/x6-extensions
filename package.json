{
  "name": "x6-extensions",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint:ts": "eslint '**/src/**/*.{js,ts}?(x)' --cache --fix",
    "lint:style": "stylelint '**/src/**/*.less' --customSyntax postcss-less --cache --fix",
    "lint": "run-s lint:ts lint:style",
    "prettier": "prettier --write '**/*.{js,mjs,jsx,tsx,ts,less,md,json}'",
    "pretty-quick": "pretty-quick",
    "test": "pnpm -r --stream --filter=./packages/* run test",
    "build": "pnpm -r --stream --filter=./packages/* run build",
    "build:cjs": "pnpm -r --stream --filter=./packages/* run build:cjs",
    "build:esm": "pnpm -r --stream --filter=./packages/* run build:esm",
    "build:umd": "pnpm -r --stream --filter=./packages/* run build:umd",
    "clean:build": "pnpm -r --if-present --parallel --filter=./packages/* run clean",
    "update:deps": "pnpm update --interactive --latest --recursive",
    "setup:husky": "husky install .husky",
    "release": "pnpm publish --no-git-checks -r"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.less": [
      "stylelint --customSyntax postcss-less --fix"
    ],
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@changesets/cli": "2.26.2",
    "@commitlint/config-conventional": "^17.8.1",
    "@rollup/plugin-commonjs": "^23.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.2.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@semantic-release-monorepo/cli": "^2.1.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jasmine": "^4.6.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.123",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "less": "^4.4.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.29.5",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "run-shared-scripts": "^1.1.5",
    "semantic-release": "^19.0.5",
    "sinon": "^15.2.0",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^4.9.5",
    "utility-types": "^3.10.0"
  },
  "engines": {
    "pnpm": ">=7"
  }
}
